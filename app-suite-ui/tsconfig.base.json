{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@app-suite-ui/source"],
    "baseUrl": ".",
    "paths": {
      "@app_suite/common": ["packages/common/src/index.ts"],
      "@app_suite/mobile_common": ["packages/mobile_common/src/index.ts"],
      "@app_suite/web_common": ["packages/web_common/src/index.ts"],
      "@app_suite/app1_module": ["modules/app1_module/src/index.ts"]
    }
  }
}
